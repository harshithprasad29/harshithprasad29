
<div class="row">
  <% @products.each do |product| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <span><%= image_tag product.images.first.url, :class => "style_image" %></span>
        <div class="caption">
          <h3><%= product.name %></h3>
          <p><%= product.description %></p>
          <p>
            <a href="/products/<%= product.id %>" class="btn btn-default" role="button">Show</a> 
            <a href="/products/<%= product.id %>/edit" class="btn btn-default" role="button">Edit</a>
            <a href="/products/<%= product.id %>" data-confirm="Are you sure?" data-method="delete" class="btn btn-default" role="button">Destroy</a>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
